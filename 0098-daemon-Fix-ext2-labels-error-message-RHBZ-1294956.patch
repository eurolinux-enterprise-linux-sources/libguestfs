Subject: [PATCH 098/118] daemon: Fix ext2 labels error message (RHBZ#1294956).

(cherry picked from commit 1007b2555c71f8cb93cbda1604ce221a4101027d)
---
 daemon/ext2.c   | 4 ++--
 daemon/labels.c | 2 +-
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/daemon/ext2.c b/daemon/ext2.c
index a618e66..c0a5c53 100644
--- a/daemon/ext2.c
+++ b/daemon/ext2.c
@@ -334,7 +334,7 @@ do_mke2journal_L (int blocksize, const char *label, const char *device)
   int r;
 
   if (strlen (label) > EXT2_LABEL_MAX) {
-    reply_with_error ("%s: ext2 labels are limited to %d bytes",
+    reply_with_error ("%s: ext2/3/4 labels are limited to %d bytes",
                       label, EXT2_LABEL_MAX);
     return -1;
   }
@@ -424,7 +424,7 @@ do_mke2fs_JL (const char *fstype, int blocksize, const char *device,
   }
 
   if (strlen (label) > EXT2_LABEL_MAX) {
-    reply_with_error ("%s: ext2 labels are limited to %d bytes",
+    reply_with_error ("%s: ext2/3/4 labels are limited to %d bytes",
                       label, EXT2_LABEL_MAX);
     return -1;
   }
diff --git a/daemon/labels.c b/daemon/labels.c
index d1ce6a4..7d9e2e4 100644
--- a/daemon/labels.c
+++ b/daemon/labels.c
@@ -39,7 +39,7 @@ e2label (const char *device, const char *label)
   CLEANUP_FREE char *err = NULL;
 
   if (strlen (label) > EXT2_LABEL_MAX) {
-    reply_with_error ("%s: ext2 labels are limited to %d bytes",
+    reply_with_error ("%s: ext2/3/4 labels are limited to %d bytes",
                       label, EXT2_LABEL_MAX);
     return -1;
   }
